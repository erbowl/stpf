= bootstrap_form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  = f.text_field :nickname
  = f.email_field :email
  = f.file_field :image


  .actions
    = f.submit 'Save'
